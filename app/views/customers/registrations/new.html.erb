<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
      <label>姓</label>
      <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
      <label>名</label>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="form-group">
      <label>セイ</label>
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
      <label>メイ</label>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="form-group">
      <label>メールアドレス</label>
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>

  <div class="form-group">
      <label>郵便番号(ハイフンなし)</label>
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>

    <div class="form-group">
      <label>住所</label>
      <%= f.text_field :address, autofocus: true, autocomplete: "adress" %>
    </div>

    <div class="form-group">
      <label>電話番号</label>
      <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
    </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
