<h3>マイページ</h3>
<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h3>登録情報
      	<%= link_to '編集する', edit_customer_path %>
      	<%= link_to ' パスワードを変更する ', new_customer_password_path %>
        <%= link_to 'Change my password', edit_customer_password_path(@customer, reset_password_token: @customer.reset_password_token) %>
      </h3>
      <table class="table customer info">
      	<tbody>
      		<tr>
      		  <th>氏名</th>
      		  <td><%= @customer.family_name %><%= @customer.first_name %></td>
      		</tr>
      		<tr>
      		  <th>カナ</th>
      		  <td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
      		</tr>
      		<tr>
      		  <th>郵便番号</th>
      		  <td>〒	<%= @customer.post_code %></td>
      		</tr>
          <tr>
            <th>住所</th>
            <td>〒 <%= @customer.address %></td>
          </tr>
      		<tr>
      		  <th>電話番号</th>
      		  <td><%= @customer.tel %></td>
      		</tr>
      		<tr>
      		  <th>メールアドレス</th>
      		  <td><%= @customer.email %></td>
        </tbody>
      </table>

      <h3>
      	配送先
        <%= link_to '一覧を見る', addresses_path %>
      </h3>
      <h3>
        注文履歴
        <%= link_to '一覧を見る', orders_path %>
      </h3>
    </div>
  </div>
</div>
