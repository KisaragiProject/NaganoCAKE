<div class="container">
  <div class="row">
    <h2 style="margin-bottom: 20px; border-left: 50px; padding: 10px;">マイページ</h2>
    <div class="col-xs-8">
      <h3><strong>登録情報</strong></h3>
        <%= render partial: 'layouts/flash', flash: flash %>
      	<%= link_to '編集する', edit_customer_path, class:"btn btn-primary" %>
      	<%= link_to ' パスワードを変更する ', new_customer_password_path, class:"btn btn-primary" %>
      <table class="table customer info">
        <table border="1" width="600" height="200">
      	<tbody>
      		<tr>
      		  <th width="25%" bgcolor="#EEEEEE">氏名</th>
      		  <td width="75%"><%= @customer.family_name %><%= @customer.first_name %></td>
      		</tr>
      		<tr>
      		  <th bgcolor="#EEEEEE">カナ</th>
      		  <td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
      		</tr>
      		<tr>
      		  <th bgcolor="#EEEEEE">郵便番号</th>
      		  <td>〒	<%= @customer.post_code %></td>
      		</tr>
          <tr>
            <th bgcolor="#EEEEEE">住所</th>
            <td> <%= @customer.address %></td>
          </tr>
      		<tr>
      		  <th bgcolor="#EEEEEE">電話番号</th>
      		  <td><%= @customer.tel %></td>
      		</tr>
      		<tr>
      		  <th bgcolor="#EEEEEE">メールアドレス</th>
      		  <td><%= @customer.email %></td>
        </tbody>
        </table>
      </table>

      <table class="table index-btn ">
      <table width="250">
        <tr>
          <th>
            <h4><strong>配送先</strong></h4>
          </th>
          <td>
            <%= link_to '一覧を見る', addresses_path, class:"btn btn-primary" %>
          </td>
        </tr>
        <!-- 間隔を空けるために空タグ追加 -->
        <tr>
          <th>　　</th>
        </tr>
        <tr>
          <th>
            <h4><strong>注文履歴</strong></h4>
          </th>
          <td>
            <%= link_to '一覧を見る', orders_path, class:"btn btn-primary" %>
          </td>
        </tr>
      </table>
      </table>
    </div>
  </div>
</div>
