<div class="container">
<div class="row">
	<div class="col-xs-2">
	</div>

	<div class="col-xs-9">
		<h2>ショッピングカート</h2>
		<%= button_to "カートを空にする",cart_items_path, method: :destroy_all, class: "btn btn-danger" %>
		<table class='table'>
		<thead>
				<tr>
					<th>商品名</th>
					<th>単価</th>
					<th></th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<% sum = 0 %>
			<tbody>
				<% @cart_items.each do |cart_item| %>
 					<tr>
 						<th><%=link_to "#{cart_item.product.name}", product_path(cart_item.product) %></th>
						<th><%= cart_item.product.price %></th>
						<th><%= form_with model:CartItem do |f| %>
						<th><%= f.number_field :quantity, min:1, max:99  %>
						 	<%= cart_item.quantity %>
						<%= link_to "更新する" ,cart_items_path(cart_item), method: :update,class: "btn btn-primary"%>
						</th>

						<th><%= sub_total = cart_item.product.price * cart_item.quantity %></th>
						<% sum = sum + sub_total %>
												<th>
						<td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
						</th>
						<% end %>
					</tr>
				<% end %>
			</tbody>
    	</table>
    	<div class="row">
			<table class='table'>
				<tr>
					<th>合計金額</th>
					<th><%= sum %>円
					</th>
				</tr>
			</table>
		</div>
	</div>
</div>

