<div class="container">
  <div class="row">
	<div class="col-xs-8">
		<h2>ショッピングカート</h2>
		<%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger col-xs-2" %>
		<table class='table'>
		  <table border="1" width="1000" >
		<thead>
				<tr height="50" bgcolor="#EEEEEE">
					<th>商品名</th>
					<th>単価</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<!-- sum=0をeach内部に入れるとバグる -->
				<% sum = 0 %>
				<% @cart_items.each do |cart_item| %>
 					<tr>
 						<td><%=link_to product_path(cart_item.product) do %>
 							<%= attachment_image_tag(cart_item.product, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
 							<%= cart_item.product.name %>
 							<% end %>
 						</td>
						<td>
							<% view_price = cart_item.product.price * 1.08 %>
							<%= view_price.to_i %>円
						</td>
						<td><%= form_with model: cart_item, local: true do |f| %>
						  	<%= f.number_field :quantity, value: cart_item.quantity, min:1, max:99  %>
						    <%= f.submit "変更する", class: "btn btn-primary" %>
						  </td>
						  <td><%= sub_total = cart_item.product.price * cart_item.quantity %>円</td>
						  <% sum = sum + sub_total %>
						</td>
						<td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
						</td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		  </table>
    	</table>
    </div>
  </div>

  <div class="row">
  	<div class="col-xs-4">
  	  <table class="table table buy">
  	  	<table border="0">
  	    <tr>
  	      <td>
            <%= link_to "買い物を続ける", customer_top_path, class: "btn btn-primary "%>
          </td>
        </tr>
       </table>
      </table>
    </div>
    <div class="col-xs-5 pull-right">
      <table class="table table sum" >
        <table border="1" width="320" height="70">
	        <tr>
	          <th width="50%" bgcolor="#EEEEEE">合計金額</th>
	            <td>
			      <div class = 'total_price'>
			        <%= sum %>
			      </div>
			    </td>
			</tr>
		</table>
	  </table>
	</div>

	<div class="btn-s">
		<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success col-xs-3"%>
	<div>

  </div>
</div>