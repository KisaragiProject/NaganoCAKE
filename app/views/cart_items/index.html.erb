<div class="container">
<div class="row">
	<div class="col-xs-2">
	</div>

	<div class="col-xs-9">
		<h2>ショッピングカート</h2>
		<%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger col-xs-2" %>
		<table class='table'>
		<thead>
				<tr>
					<th>商品名</th>
					<th>単価</th>
					<th></th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<!-- sum=0をeach内部に入れるとバグる -->
				<% sum = 0 %>
				<% @cart_items.each do |cart_item| %>
 					<tr>
 						<th><%=link_to "#{cart_item.product.name}", product_path(cart_item.product) %></th>
						<th><%= cart_item.product.price %>円</th>
						<th><%= form_with model: cart_item, local: true do |f| %>
						<th><%= f.number_field :quantity, value: cart_item.quantity, min:1, max:99  %>
						<%= f.submit "更新する", class: "btn btn-primary" %>
						</th>
						<th><%= sub_total = cart_item.product.price * cart_item.quantity %>円</th>
						<% sum = sum + sub_total %>
												<th>
						<td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
						</th>
						<% end %>
					</tr>
				<% end %>
			</tbody>
    	</table>
    	<%= link_to "買い物を続ける", products_path, class: "btn btn-primary col-xs-2"%>
		<div class = 'total_price'>
		 合計金額<%= sum %>円
		</div>
		<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success col-xs-3"%>
	</div>
</div>

