<div class="container">
		<h2>商品 詳細画面</h2>
<%= render partial: 'layouts/flash', flash: flash %>
<div class="row">
	<%= form_with model:@product, url: admins_product_path, local: true do |f| %>
	<div class="col-xs-3">
		<%= attachment_image_tag(@product, :image, :fill, 180, 180, fallback: "no_image.jpg") %>
        <%= f.attachment_field :image %>
	</div>
  	<div class='col-xs-4'>
		<table class= 'table' >
		  <table border="0" width="520" height="300">
			<tr>
			  <th width="30%"><%= f.label :商品名 %></th>
				<td><%= f.text_field :name, class:"form-control", placeholder:"商品名" %></td>
			</tr>
			<tr>
				<th><%= f.label :商品説明 %></th>
				<td><%= f.text_area :introduction, class:"form-control", placeholder:"商品説明" %></td>
			</tr>
			<tr>
				<th><%= f.label :ジャンル %></th>
				 <td><%= f.select :genre_id, Genre.all.map{|g|[g.name,g.id]}, include_blank: "選択して下さい",
				 class:"form-control" %></td>
			</tr>
			<tr>
				<th><%= f.label :税抜き価格 %></th>
				<td><%= f.text_field :price, class:"form-control", placeholder:"値段" %></td>
				<td>　円</td>
			</tr>
			<tr>
				<th><%= f.label :販売ステータス %></th>
				<td><%= f.select :status, [["販売中", "true"], ["売り切れ", "false"],], include_blank: "選択して下さい",
				 class:"form-control" %></td>
			</tr>
    	  </table>
        </table>
    </div>
        <div class="col-xs-12 " >
	      <div class="col-xs-3 pull-right">
            <%= f.submit "変更を保存", class: "btn btn-primary btn-lg col-xs-8" %>
          </div>
        </div>
	<% end %>
</div>
</div>

