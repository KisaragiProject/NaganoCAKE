<%= render 'layouts/adminheader' %>
<div class="container">
		<h2>商品 詳細画面</h2>
<div class="row">
	<%= form_with model:@product, url: admins_product_path, local: true do |f| %>
	<div class="col-xs-3">
		<%= attachment_image_tag(@product, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
        <%= f.attachment_field :image %>
	</div>
  	<div class='col-xs-4'>
		<table class= 'table' >
			<tr>
				<%= f.label :商品名 %>
				<%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
			</tr>
			<tr>
				<%= f.label :商品説明 %>
				<%= f.text_area :introduction, class:"form-control", placeholder:"商品説明" %>
			</tr>
			<tr>
				<%= f.label :ジャンル %>
				 <%= f.select :genre_id, Genre.all.map{|g|[g.name,g.id]}, include_blank: "選択して下さい",
				 class:"form-control" %>
			</tr>
			<tr>
				<p>
					<%= f.label :税抜き価格 %>
					<%= f.text_field :price, class:"form-control", placeholder:"値段" %>円
			</tr>
			<tr>
					<%= f.label :販売ステータス %>
					<%= f.select :status, [["販売中", "true"], ["販売中止", "false"],], include_blank: "選択して下さい",
				 class:"form-control" %>
			</tr>
			<tr>
				<th>
    		     <%= f.submit "変更を保存", class: "btn btn-success" %>
    		 	</th>
    		 </tr>
        </table>
	</div>
	<% end %>
</div>
</div>

