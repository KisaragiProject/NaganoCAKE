<div class="container">
		<h2>商品 詳細画面</h2>
<div class="row">
		<div class="col-xs-3">
		<%= attachment_image_tag(@product, :image, :fill, 180, 180, fallback: "no_image.jpg") %>
	</div>
  	<div class='col-xs-4'>
		<table class= 'table' >
		  <table border="0" width="500" height="300">
			<tr>
				<th width="40%">商品名</th>
				<th><%= @product.name %></th>
			</tr>
			<tr>
				<th>商品説明</th>
				<th><%= @product.introduction %></th>
			</tr>
			<tr>
				<th>ジャンル</th>
				<th><%= @product.genre.name %></th>
			</tr>
			<tr>
				<th>税込価格(税抜価格)</th>
				<th><%= @product.price %>
					<% tax_price = @product.price * 1.08 %>
					(<%= tax_price.to_i %>)円</th>
			</tr>
			<tr>
				<th>販売ステータス</th>
				<th><% if @product.status == true %>
	販売中
<% else %>
	売り切れ
<% end %></th>
			</tr>
        </table>
	</div>
    <div class="col-xs-12 " >
	  <div class="col-xs-3 pull-right">
        <%= link_to "編集する", edit_admins_product_path, class: "btn btn-success btn-lg" %>
      </div>
    </div>
</div>
</div>

