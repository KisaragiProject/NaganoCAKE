<div class="row">
  <h3>会員一覧画面</h3>
  <table class="table table-customers">
    <thead>
	    <tr>
	      <th>会員ID</th>
	      <th>氏名</th>
	      <th>メールアドレス</th>
	      <th>ステータス</th>
	    </tr>
	</thead>

	<tbody>
	  <% @customers.each do |customer| %>
	    <tr>
	      <td><%= customer.id %></td>
	      <td>
	      	<%= link_to admins_customer_path(customer) do %>
	      	  <%= customer.family_name %><%= customer.first_name %>
	      	<% end %>
	      </td>
	      <td><%= customer.email %></td>
	      <% if customer.is_active? == true %>
	      	<td>有効</td>
	      <% else %>
	      	<td>退会済</td>
	      <% end %>
	    </tr>
	  <% end %>
	</tbody>
  </table>
</div>
