<div class="edit container">
  <div class="row">
<h3>会員編集画面</h3>
<%= render partial: 'layouts/flash', flash: flash %>
<%= form_for(@customer,url: admins_customer_path(@customer), method: :patch) do |f| %>
  <table class="table edit">
    <table border="0" width="500" height="300" >
      <tr>
      	<th><label>会員ID</label></th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th><label>氏名</label></th>
        <td>
		    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
		    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
		</td>
	  </tr>
	  <tr>
	  	<th><label>フリガナ</label></th>
	  	<td>
		    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
		    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
	    </td>
	  </tr>
	  <tr>
	    <th><label>郵便番号</label></th>
	    <td>
		    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
	    </td>
	  </tr>
	  <tr>
	    <th><label>住所</label></th>
	    <td>
		  <%= f.text_field :address, autofocus: true, autocomplete: "address", size:50 %>
		</td>
	  </tr>
	  <tr>
	    <th><label>電話番号</label></th>
	    <td>
		  <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
	    </td>
	  </tr>
	  <tr>
	    <th><label>メールアドレス</label></th>
	    <td>
		  <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
		</td>
	  </tr>
	  <tr>
	  	<th><label>会員ステータス</label></th>
	    <td>
	      <div class="is_active">
	  	    <%= f.radio_button :is_active, :true %>
		    <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
  		    <%= f.radio_button :is_active, :false %>
  		    <%= f.label :is_active, "退会済み", {value: :false, style: "display: inline-block;"} %>
	      </div>
	    </td>
	  </tr>
	</table>
  </table>
  <div class="btn-group">
    <%= f.submit "変更を保存する", class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
