<%= render 'layouts/adminheader' %>
<h3>会員編集画面</h3>
<%= form_for(@customer,url: admins_customer_path(@customer), method: :patch) do |f| %>
  <div class="edit-container">
    <div class="row">
      <label>会員ID</label>
        <%= @customer.id %>
      <div class="form-group">
		    <label>氏名</label>
		    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
		    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
	  </div>
	  <div class="form-group">
		    <label>フリガナ</label>
		    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
		    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
	  </div>
	  <div class="form-group">
		    <label>郵便番号</label>
		    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
	  </div>
	  <div class="form-group">
		    <label>住所</label>
		    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
	  </div>
	  <div class="form-group">
		    <label>電話番号</label>
		    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
	  </div>
	  <div class="form-group">
		    <label>メールアドレス</label>
		    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="is_active">
	    <%= form_with(model: @customer, local: true) do |form| %>
	  	  <label>会員ステータス</label>
	      <label><%= form.radio_button :is_active, :ture %>有効</label>
	      <label><%= form.radio_button :is_active, :false %>退会済み</label>
	    <% end %>
	  </div>
	  <div class="btn-group">
	    <%= f.submit "変更を保存する", class:"btn btn-primary" %>
	  </div>
	</div>
  </div>
<% end %>
