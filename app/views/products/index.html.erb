<div class="container">
<div class="row">
	<div class="col-xs-2">
		<%= render 'genres/index', genres: @genres %>
	</div>
	<div class="col-xs-10">
		<h2>商品一覧全<%= @sum %>件</h2>
		<% @products.each do |product| %>
		<% if product.genre.validity == true %>
		<%= render 'products/index', product: product %>
		<% end %>
		<% end %>
		<div class="col-xs-2 col-xs-offset-4">
	      <%= paginate @products %>
        </div>
	</div>
</div>
</div>

