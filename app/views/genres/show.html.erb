<div class="container">
<div class="row">
	<div class="col-xs-2">
		<%= render 'genres/index', genres: @genres %>
	</div>
	<div class="col-xs-10">
		<h2><%= @genre.name %>一覧<%= @genre.products.count %>種</h2>
		<% @genre.products.each do |product| %>
		<div class="col-xs-3 product_box">
			<br>
			<%= link_to (product) do %>
			<%= attachment_image_tag(product, :image, :fill, 250, 200, fallback: "no_image.jpg") %>
			<br>
			<%= product.name %>
			<% end %>
			<br>
			<%= render 'products/price', product: product %>
		</div>
		<% end %>
	</div>
</div>
</div>

