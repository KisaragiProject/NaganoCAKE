<div class="index-container">
  <h3>配送先登録/一覧</h3>
	<%= form_for (@address) do |f| %>
	  <div class="form-group">
		<label>郵便番号(ハイフンなし)</label>
		  <%= f.text_field :post_code %>
	  </div>
	  <div class="form-group">
		<label>住所</label>
		  <%= f.text_field :address %>
	  </div>
	  <div class="form-group">
		<label>宛名</label>
		  <%= f.text_field :addressee %>
	  </div>
	  <%= f.submit "登録する", class:"btn btn-success" %>
<% end %>

  <table class="table-address">
    <thead>
      <tr>
      	<th> 郵便番号 </th>
      	<th> 住所 </th>
      	<th> 宛名 </th>
      </tr>
    </thead>
  <% @addresses.each do |address| %>
    <tbody>
      <tr>
      	<td><%= address.post_code %></td>
      	<td><%= address.address %></td>
      	<td><%= address.addressee %></td>
      	<td>
      		<%= link_to "編集する", edit_address_path(address), class:"btn btn-primary" %>
      		<%= link_to "削除する", address_path(address), class:"btn btn-danger", method: :delete %>
      	</td>
      </tr>
    </tbody>
  <% end %>
  </table>
</div>

