<!-- 配送先編集画面 -->
<div class="edit_address-container">
  <h3>配送先編集</h3>
  <!-- 編集フォーム -->
  <%= form_for (@address) do |f| %>
    <div class="form-group">
		<label>郵便番号(ハイフンなし)</label>
		  <%= f.text_field :post_code, autofocus:true %>
	</div>
	<div class="form-group">
		<label>住所</label>
		  <%= f.text_field :address, autofocus:true %>
	</div>
	<div class="form-group">
		<label>宛名</label>
		  <%= f.text_field :addressee, autofocus:true %>
	</div>
	<!-- 編集確定ボタン -->
	<%= f.submit "編集する", class:"btn btn-success" %>
  <% end %>
</div>