<!-- 配送先編集画面 -->
<div class="edit_address-container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <a class="close" data-dismiss="alert">×</a>
      <%= msg %>
    </div>
  <% end %>
  <h3>配送先編集</h3>
  <!-- 編集フォーム -->
  <%= form_for (@address) do |f| %>
  <table border="0" width="600" >
  	<tr>
  	  <th width="25%">郵便番号(ハイフンなし)</th>
  	  <td>
        <div class="form-group">
		  <%= f.text_field :post_code, autofocus:true %>
	    </div>
	  </td>
	</tr>
	<tr>
	  <th>住所</th>
	  <td>
	    <div class="form-group">
		  <%= f.text_field :address, autofocus:true, size: 50 %>
	    </div>
	  </td>
	</tr>
	<tr>
	  <th>宛名</th>
	  <td>
	    <div class="form-group">
		  <%= f.text_field :addressee, autofocus:true %>
	    </div>
	  </td>
	  <td><%= f.submit "編集する", class:"btn btn-primary" %></td>
	</tr>
  <% end %>
  </table>
</div>