<div class="container">
<div class="row">
	<div class="col-xs-2">
		<%= render 'genres/index', genres: @genres %>
	</div>
	<div class="col-xs-10">
		<div class ="top row">
			<div class= "top_image col-xs-6">
			 <%= image_tag 'img_top.jpeg', :size =>'400x300' %>
			</div>
			<div class ="welocme_message col-xs-6">
