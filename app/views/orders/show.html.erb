<h1>注文履歴詳細</h1>
<div class="row">
	<div class="col col-xs-8">
<h2>注文情報</h2>
<table>
	<tbody>
		<tr>
			<td>注文日</td>
			<td><%= @order.created_at %></td>
		</tr>
		<tr>
			<td>配送先</td>
			<td><%= @order.send_to_address %></td>
		</tr>
		<tr>
			<td>支払方法</td>
			<td><%= @order.how_to_pay %></td>
		</tr>
		<tr>
			<td>ステータス</td>
			<td><%= @order.order_status %></td>
		</tr>
	</tbody>
</table>
</div>

<div class="col col-xs-4">
<h2>請求情報</h2>
<table>
	<tbody>
		<tr>
			<td>商品合計</td>
			<td>
				<% price_plus_tax = order_item.order_price.to_i * 1.08 %>
				<% price_plus_tax =%>
			</td>
		</tr>
		<tr>
			<td>配送料</td>
			<td><%= @order.deliver_fee %></td>
		</tr>
		<tr>
			<td>ご請求額</td>
			<td>
				<% billing_amount = price_plus_tax + @order.deliver_fee.to_i %>
				<%= billing_amount %>
			</td>
		</tr>
	</tbody>
</table>
</div>
</div>

<div class="row">
<h2>注文内容</h2>
<table>
	<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<%= @order.order_items.each do |order_item| %>
		<tr>
			<td><%= order_item.name %></td>
			<td>
				<% price_plus_tax =%>
				</td>
			<td><%= order_item.quantity %></td>
			<td><%= price_plus_tax * order_item.quantity.to_i %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
