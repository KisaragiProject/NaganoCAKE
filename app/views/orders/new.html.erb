<h1>注文情報入力</h1>

<%= form_with model: Order.new, local: true do |form| %>
  <h3>支払方法</h3>
  <%= form.radio_button :how__to_pay, checked:true %>
  <%= form.label :how_to_pay, "クレジットカード", {value: :true, style: "display: inline-block;"} %>
  <br>
  <%= form.radio_button :how_to_pay, :false %>
  <%= form.label :how_to_pay, "銀行振込", {value: :false, style: "display: inline-block;"} %>
  <% end %>

<%= form_with model: Order.new, local: true do |form| %>
  <h3>お届け先</h3>
  <%= form.radio_button :send_to_address, :customer %>
  <%= form.label :send_to_address, "ご自身の住所", style: "display: inline-block" %>
  <%= @customer.address %>
  <br>
  <%#= form.radio_button :send_to_address %>
  <%#= form.label :send_to_address, "登録済住所から選択", style: "display: inline-block" %>
  <%#= form.collection_sellect :customer.address.address, :id, :address %>
  <br>
  <%= form.radio_button :send_to_address, :new %>
  <%= form.label :send_to_address, "新しいお届け先", style: "display: inline-block" %>
  <%= form_with %>
  <%= form.label :郵便番号ハイフンなし %>
  <%= form.text_field :post_code %>
  <br>
  <%= form.label :住所 %>
  <%= form.text_field :send_to_address %>
  <br>
  <%= form.label :宛名 %>
  <%= form.text_field :addressee %>
  <br>
  <% end %>
  <br>
  <%= link_to '注文確定画面に進む', order_items_path(@order) %>