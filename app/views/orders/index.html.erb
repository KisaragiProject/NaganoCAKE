<h1>注文履歴一覧</h1>

<table>
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= l order.created_at %></td>
			<td><%= order.send_to_address %></td>
			<td>
				<% sum = 0 %>
				<% order.order_items.each do |order_item| %>
				  <%= order_item.product.name %><br>
				  <% sub_total = order_item.order_price.to_i * order_item.quantity.to_i %>
				  <% sum += sub_total + order.deliver_fee.to_i %>
				<% end %>
			</td>
			<td>
				<%= sum %>円
			</td>
			<td><%= order.order_status %></td>
			<td><%= link_to '表示する', order_path(order), class: "btn btn-sm btn-primary" %></td>
		</tr>
		<% end %>
	</tbody>
</table>