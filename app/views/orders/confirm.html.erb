<div class="row">
<h1>注文情報確認</h1>

<div class="col col-xs-8">
<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% sum = 0 %>
		<% @cart_items.each do |cart_item| %>
		<tr>
			<td>
				<%= attachment_image_tag %>
				<%= cart_item.product_id.name %>
			</td>
			<td>
				<% price_plus_tax = cart_item.product_id.price.to_i * 1.08 %>
				<%= price_plus_tax %>
			</td>
			<td><%= cart_item.quantity %></td>
		</tr>
		<% sub_total = price_plus_tax * cart_item.quantity.to_i %>
		<% sum += sub_total %>
		<% end %>
	</tbody>
</table>
</div>

<div class="col col-xs-4">
<table>
	<thead>
		<tr>
			<th>送料</th>
			<th>商品合計</th>
			<th>請求金額</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @order.deliver_fee %></td>
			<td><%= sum %></td>
			<td>
				<% billling_amount = sum + @order.deliver_fee.to_i %>
				<%= billling_amount %>
			</td>
		</tr>
	</tbody>
</table>
</div>
</div>

<div class="row">
	<h2>支払方法</h2>
	<%= @order.how_to_pay %>
	<h2>お届け先</h2>
	<%= @order.send_to_address %>
</div>

<%= link_to "購入を確定する", cart_items_path, method: :post, class: "btn btn-sm btn-success" %>